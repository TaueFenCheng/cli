{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noBannedTypes": "off",
        "noForEach": "off",
        "noExtraBooleanCast": "off"
      },
      "suspicious": {
        "noImplicitAnyLet": "off",
        "noExplicitAny": "off",
        "noGlobalIsNan": "off",
        "noAssignInExpressions": "off",
        "noShadowRestrictedNames": "off"
      },
      "style": {
        "noUselessElse": "off",
        "noVar": "off",
        "noUnusedTemplateLiteral": "off",
        "noParameterAssign": "off",
        "useTemplate": "off",
        "useSingleVarDeclarator": "off"
      }
    },
    "ignore": ["**/node_modules/**"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
